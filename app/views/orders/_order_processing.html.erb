<%delivery = order.delivery%>
<div class="order-info__inner">

  <div class="order-info__top order-info__top_mb_19">
    <div class="order-info__head-number open">Order #<%= order.id %> <i class="order-info__icon fa fa-minus-square-o"></i></div>
    <p class="order-info__status"><span>Status.</span> Selection completed</p>
  </div>
  <div id="closed">


    <div class="order-info__your-order total__row_mt_15">
      <p class="order-info__subsection order-info__subsection_pt">Your order</p>

      <div class="order-info__all-item order-info__r_mr_87">
        <%order.line_items.each do |item| var = item.variant %>
        <div class="order-info__item">
          <a href="#" class="order-info__img-link"><img src="<%= var.pictures.find_by_order(0).image.url(:micro) %>" alt=""/></a>
          <div class="order-info__item-wrap">
            <div class="order__number">Order #<%= order.id %>-1 Custom fit</div>
            <a href="#" class="order__name-link order__name-link_fs_15">Rhythmic Gymnastics Leotard â„–<%= var.product.name %> </a>
          </div>
        </div>
            <%end%>
      </div>
    </div>

    <div class="order-info__delivery">
      <p class="order-info__subsection">Delivery</p>

      <div class="order-info__delivery-address total__r_w_78">
        <p class="order-info__user-name"><%= delivery.full_name %> <a href="#" class="order-info__user-mail"><%= delivery.email %></a></p>
        <p class="order-info__address">
          <%= delivery.street %>
          <%= delivery.city %>
          <%= delivery.state %>, <%= delivery.zip %>
          <%= delivery.country %>
        </p>
      </div>
    </div>


    <div class="order-info__paid">
      <p class="order-info__subsection order-info__subsection_pt_21">Paid</p>
      <div class="order-info__price"><i class="fa fa-<%= @currency.code %>"></i><%= order.full_price @currency %>.-</div>
    </div>

    <div class="order-info__guarantee">
      <p class="order-info__subsection">Guarantee</p>
      <p class="order-info__guarantee-text">If your leotards are not perfect exchange them free of
        charge for another or get a complete refund.</p>
    </div>

    <div class="order-info__bottom">
      <div class="order-info__cancel">
        <a href="#" class="btn btn_green btn_box-shadow"><span class="btn_in-shadow">Cancel order</span></a>
        <a class="order-info__free" href="#">FREE</a>
      </div>
      <div class="order-info__update">
        <a href="#" class="order-info__link-why">Why i need to pay for leotards changing</a>
        <a class="order-info__update-link dashed" href="#"><u>Update leotards</u></a>
        <span class="order-info__price-update"><i class="fa fa-usd"></i>9.-</span>
      </div>
      <div class="order-info__view">
        <a class="order-info__invoice dashed" href="#"><u>View invoice again</u></a> or
        <a class="order-info__pay-type dashed" href="#"><u>Change pay type</u></a>
      </div>
    </div>
  </div>
</div>
