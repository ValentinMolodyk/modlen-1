<%= form_for(@line_item) do |f| %>

  <div class="option__measure-list">
    <ul class="measure-list">
      <li class="measure-list__item ">
        <label class="measure-list__label measure-list__label_unit_none" for="Name">Models name</label>
        <input type="text" id="Name" class="input measure-list__input measure-list__input_width"/>

        <p class="option__right-text">Fill in original measurements</p>
      </li>
      <li class="measure-list__item">
        <label class="measure-list__label measure-list__label_unit" for="Age">Age</label>
        <%= f.text_field :age, class: 'input measure-list__input', id: 'Age'%>
      </li>
      <li class="measure-list__item">
        <label class="measure-list__label" for="height"><span class="measure-list__num">1</span>Height</label>
        <%= f.text_field :age, class: 'input measure-list__input', id: 'Age'%>
      </li>
      <li class="measure-list__item">
        <label class="measure-list__label" for="chest"><span class="measure-list__num">2</span>Chest</label>
        <%= f.text_field :chest, class: 'input measure-list__input', id: 'Chest'%>
        <span class="option__measure-comment-field">Comment for this field</span>
      </li>
      <li class="measure-list__item">
        <label class="measure-list__label" for="waist"><span class="measure-list__num">3</span>Waist</label>
        <%= f.text_field :waist, class: 'input measure-list__input', id: 'Waist'%>
      </li>
      <li class="measure-list__item">
        <label class="measure-list__label" for="hips"><span class="measure-list__num">4</span>Hips</label>
        <%= f.text_field :hips, class: 'input measure-list__input', id: 'Hips'%>
      </li>
      <li class="measure-list__item">
        <label class="measure-list__label" for="biceps"><span class="measure-list__num">5</span>Biceps</label>
        <%= f.text_field :biceps, class: 'input measure-list__input', id: 'Biceps'%>
      </li>
      <li class="measure-list__item">
        <label class="measure-list__label" for="elbow">
          <span class="measure-list__num">6</span>Elbow</label>
        <%= f.text_field :elbow, class: 'input measure-list__input', id: 'Elbow'%>
      </li>
      <li class="measure-list__item">
        <label class="measure-list__label" for="wrist"><span class="measure-list__num">7</span>Wrist</label>
        <%= f.text_field :wrist, class: 'input measure-list__input', id: 'Wrist'%>
      </li>
      <li class="measure-list__item">
        <span class="measure-list__num">8</span>
        <a class="measure-list__link link dashed" href="#"><u>Collar</u></a>
        <a class="measure-list__link measure-list__link_active link dashed" href="#"><u>No collar</u></a>
        <%= f.text_field :collar, class: 'input measure-list__input'%>
        <div class="item__price item__price_strike item__price_collar"><i class="fa fa-usd"></i>3.-</div>
      </li>
      <li class="measure-list__item">
        <label class="measure-list__label" for="shoulder"><span class="measure-list__num">9</span>Shoulder</label>
        <%= f.text_field :shoulder, class: 'input measure-list__input', id: 'Shoulder'%>
      </li>
      <li class="measure-list__item">
        <label class="measure-list__label" for="neck"><span class="measure-list__num">10</span>Neck circle</label>
        <%= f.text_field :neck_circle, class: 'input measure-list__input', id: 'Neck'%>
      </li>
      <li class="measure-list__item">
        <label class="measure-list__label" for="fromNeck">
          <span class="measure-list__num">11</span> From neck to groin</label>
        <%= f.text_field :from_neck, class: 'input measure-list__input', id: 'FromNeck'%>
      </li>
      <li class="measure-list__item">
        <label class="measure-list__label" for="LWaist"><span class="measure-list__num">12</span>Length to
          waist</label>
        <%= f.text_field :to_waist, class: 'input measure-list__input', id: 'LWaist'%>
      </li>
      <li class="measure-list__item">
        <label class="measure-list__label" for="LSkirt"><span class="measure-list__num">13</span>Length to
          skirt</label>
        <%= f.text_field :to_skirt, class: 'input measure-list__input', id: 'LSkirt'%>
      </li>
      <li class="measure-list__item">
        <label for="sleeve" class="measure-list__label"></label>
        <span class="measure-list__num">14</span>
        <a class="measure-list__link measure-list__link_active link dashed" href="#"><u>Sleeves</u></a>
        <a class="measure-list__link link dashed" href="#"><u>No sleeves</u></a>
        <%= f.text_field :sleeves, class: 'input measure-list__input', id: 'sleeve'%>
        <span class="option__measure-depicted">as depicted</span>
      </li>
      <li class="measure-list__item">
        <label for="skirt" class="measure-list__label"></label>
        <span class="measure-list__num">15</span>
        <a class="measure-list__link measure-list__link_active link dashed" href="#"><u>Skirt</u></a>
        <a class="measure-list__link link dashed" href="#"><u>No skirt</u></a>
        <%= f.text_field :skirt, class: 'input measure-list__input', id: 'skirt'%>
        <div class="item__price item__price_strike item__price_skirt"><i class="fa fa-usd"></i>25.-</div>
      </li>
      <li class="measure-list__item">
        <label class="measure-list__label" for="body"><span class="measure-list__num">16</span>Body</label>
        <%= f.text_field :body, class: 'input measure-list__input', id: 'Body'%>
      </li>

      <li class="measure-list__item measure-list__item_offset">
        <a href="#" class="measure-list__add-link dashed"><u>Add measurements for jumpsuit sewing</u></a>
      </li>
    </ul>
  </div>
<%= f.submit %>
<%end%>
