<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <% product.variants.each do |variant| %>
        <td>
          <%=if variant.pictures[0]; image_tag variant.pictures[0].image(:thumb); end%>
          <br>
          <%=variant.name%>
          <%=link_to 'buy', new_line_item_path({variant_id:variant.id})%>
        </td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
