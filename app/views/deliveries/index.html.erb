<h1>Listing deliveries</h1>

<table>
  <thead>
    <tr>
      <th>Delivery date</th>
      <th>Deadline</th>
      <th>Speed</th>
      <th>Full name</th>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Zip</th>
      <th>Email</th>
      <th>Tel</th>
      <th>Info</th>
      <th>Git box</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deliveries.each do |delivery| %>
      <tr>
        <td><%= delivery.delivery_date %></td>
        <td><%= delivery.deadline %></td>
        <td><%= delivery.speed %></td>
        <td><%= delivery.full_name %></td>
        <td><%= delivery.street %></td>
        <td><%= delivery.city %></td>
        <td><%= delivery.state %></td>
        <td><%= delivery.country %></td>
        <td><%= delivery.zip %></td>
        <td><%= delivery.email %></td>
        <td><%= delivery.tel %></td>
        <td><%= delivery.info %></td>
        <td><%= delivery.git_box %></td>
        <td><%= link_to 'Show', delivery %></td>
        <td><%= link_to 'Edit', edit_delivery_path(delivery) %></td>
        <td><%= link_to 'Destroy', delivery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

